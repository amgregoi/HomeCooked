<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.pbnj.pbnj.Widgets.ProspectMSBTextView
        android:id="@+id/textViewStepText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_toLeftOf="@id/linearLayoutStepContainer"
        android:text="Add the rice to the pot of boiling water and cook, uncovered for 18 minutes."
        android:textSize="20sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_toStartOf="@id/linearLayoutStepContainer"
        android:background="#cccccc" />

    <LinearLayout
        android:id="@+id/linearLayoutStepContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="#29a9de"
            app:cardCornerRadius="25dp">

            <com.pbnj.pbnj.Widgets.ProspectMSBTextView
                android:id="@+id/textViewStepNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="3"
                android:textColor="#fff"
                android:textSize="36sp" />

        </android.support.v7.widget.CardView>

        <com.pbnj.pbnj.Widgets.CircularBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:letterSpacing=".2"
            android:text="MENU"
            android:textColor="#29a9de"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>
